<classSpec ident="bookAtts" type="atts">
    <desc>attributs applicables aux  <gi>book</gi></desc>
    <attList>
        <attDef ident="xml:id">
            <desc>fournit un identifiant unique pour le livre</desc>
            <datatype>
                <dataRef name="ID"/>
            </datatype>
        </attDef>
        <attDef ident="status">
            <desc>indique le statut du livre </desc>
            <valList type="closed">
                <valItem ident="red"/>
                <valItem ident="green"/>
                <valItem ident="unknown"/>
            </valList>
        </attDef>
        <attDef ident="cote">
            <desc>indique la cote ou se trouve le livre (un num√©ro entre 1 et 9999)</desc>
            <datatype>
                <dataRef key="myShelfNo"/>
            </datatype>
        </attDef>
    </attList>
</classSpec>

<dataSpec ident="myShelfNo">
        <desc>un numero entre 1 et 9999</desc>
        <content>
            <dataRef name="nonNegativeInteger">
                <dataFacet name="maxInclusive"
                    value="9999"/>
                <dataFacet name="minInclusive" value="1"/>
            </dataRef>
        </content>
    </dataSpec>
        
    
