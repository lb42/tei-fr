<encodingDesc>
    <tagsDecl>	
           <rendition xml:id="blue" scheme="css">
            color:blue;
        </rendition>
        <rendition xml:id="green" scheme="css">
            color:green;
        </rendition>
        <rendition xml:id="b"  scheme="css">
            font-weight:bold;
        </rendition> 
        <rendition xml:id="i" scheme="css">
            font-style:italic;
        </rendition> 
        <rendition xml:id="u" scheme="css">
            text-decoration:underline;
        </rendition>         
        <namespace name="http://www.tei-c.org/ns/1.0">
            <tagUsage gi="persName" render="#blue"/>
            <tagUsage gi="orgName" render="#i #blue"/>
             <tagUsage gi="placeName" render="#green"/>
            <tagUsage gi="ref" render="#u"/>
            <tagUsage gi="head" render="#b"/>
        </namespace>
    </tagsDecl></encodingDesc>
