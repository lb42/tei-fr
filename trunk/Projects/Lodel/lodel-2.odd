<elementRef key="title"/>
<elementRef key="titleStmt"/>

<!-- Delete unwanted attributes from some attribute classes -->

<classSpec ident="att.global" module="tei" mode="change" type="atts">
<attList>
<attDef ident="n" mode="delete"/>
<!--attDef ident="rendition" mode="delete"/-->
<!--attDef ident="style" mode="delete"/-->
<attDef ident="xml:base" mode="delete"/>
<attDef ident="xml:space" mode="delete"/>
</attList>
</classSpec>

<classSpec ident="att.tableDecoration" module="tei" mode="change" type="atts">
<attList>
<attDef ident="role" mode="delete"/>
</attList>
</classSpec><!-- biimho-->

<classSpec ident="att.pointing" module="tei" mode="change" type="atts">
<attList>
<attDef ident="targetLang" mode="delete"/>
<attDef ident="evaluate" mode="delete"/>
</attList>
</classSpec><!-- giimho-->

<classSpec ident="att.personal" module="tei" mode="change" type="atts">
<attList>
<attDef ident="sort" mode="delete"/>
</attList>
</classSpec><!-- giimho-->


<!-- Some local attributes are also to be deleted -->

<elementSpec ident="biblScope" mode="change">
<attList>
<attDef ident="type" mode="delete"/>
<attDef ident="from" mode="delete"/>
<attDef ident="to" mode="delete"/>
</attList>
</elementSpec>

<elementSpec ident="language" mode="change">
<attList>
<attDef ident="usage" mode="delete"/>
</attList>
</elementSpec>

<elementSpec ident="list" mode="change">
<attList>
<attDef ident="type" mode="change">
<defaultVal/>
<valList type="closed" mode="replace">
<valItem ident="ordered"/><valItem ident="unordered"/></valList></attDef>
</attList></elementSpec>

<elementSpec ident="note" mode="change">
<attList>
<attDef ident="anchored" mode="delete"/>
<attDef ident="targetEnd" mode="delete"/>
</attList></elementSpec>

<elementSpec ident="q" mode="change">
<attList>
<attDef ident="type" mode="delete"/>
</attList></elementSpec>

<elementSpec ident="relatedItem" mode="change">
<attList>
<attDef ident="target" mode="delete"/>
</attList></elementSpec>

<elementSpec ident="teiHeader" mode="change">
<attList>
<attDef ident="type" mode="delete"/>
</attList></elementSpec>
<!--
<elementSpec ident="TEI" mode="change">
<attList>
<attDef ident="version" mode="delete"/> 
</attList></elementSpec>
-->
</schemaSpec>

</body></text></TEI>

<!-- Remainimg inconsistencies :

@type and @subtype are provided by att.typed
 these elements want both: ab bibl
 * these elements want neither: abbr application date figure forename
         label lb listBibl name orgName pb persName ptr surname text
 * these elements want just @type : anchor div idno list note ref 
        relatedItem roleName
 * these elements want just @subtype : head 

@rend and @rendition (and maybe @style) are provided by att.global
 these elements want just @rend : ab
 these elements want just @rendition : bibl cell s title
 these elements want both : hi p q table

@xml:id and xml:lang are also provided by att.global
 * these elements want just xml:id : anchor appInfo, application, biblFull
   author, availability bibl cell code date desc edition editor email
   encodingDesc extent figure fileDesc forename graphic head idno item
   label langUsage language lb list listBibl meeting note notesStmt
   orgName pb profileDesc projectDesc ptr publicationStmt publisher
   pubPlace q ref relatedItem rendition resp respStmt roleName row
   sourceDesc surname table tagsDecl textClass titleStmt TEI
 * these want both: ab abbr affiliation back body code div front hi
    keywords name p persName s teiHeader text title


-->