<elementRef key="figure"/>
<elementRef key="fileDesc"/>
<elementRef key="forename"/>
<elementRef key="front"/>
<elementRef key="graphic"/>
<elementRef key="head"/>
<elementRef key="hi"/>
<elementRef key="idno"/>
<elementRef key="item"/>
<elementRef key="keywords"/>
<elementRef key="label"/>
<elementRef key="langUsage"/>
<elementRef key="language"/>
<elementRef key="lb"/>
<elementRef key="list"/>
<elementRef key="listBibl"/>
<elementRef key="meeting"/>
<elementRef key="name"/>
<elementRef key="note"/>
<elementRef key="notesStmt"/>
<elementRef key="orgName"/>
<elementRef key="p"/>
<elementRef key="pb"/>
<elementRef key="persName"/>
<elementRef key="profileDesc"/>
<elementRef key="projectDesc"/>
<elementRef key="ptr"/>
<elementRef key="pubPlace"/>
<elementRef key="publicationStmt"/>
<elementRef key="publisher"/>
<elementRef key="q"/>
<elementRef key="ref"/>
<elementRef key="relatedItem"/>
<elementRef key="rendition"/>
<elementRef key="resp"/>
<elementRef key="respStmt"/>
